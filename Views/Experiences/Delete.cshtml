@model ClimbingInfo.Models.Experience

@{
    ViewData["Title"] = "Delete_Experience";
}
@section head{
    <style type="text/css">
        dt {
            text-align: right;
        }
    </style>
}
<div class="bg-info rounded text-white" style="font-family: 'Franklin Gothic Book'; text-shadow: 1px 1px black; padding: 10px; width:80%">
    <h1 class="text-center border-primary col-sm-12">Delete Experience</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Experience</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                Experience Name:
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.ExperienceName)
            </dd>
            <dt class="col-sm-3">
                Years Climbing:
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.years)
            </dd>
            <dt class="col-sm-3">
                Frequency:
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.freq)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="ExperienceId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <i class="fa fa-solid fa-arrow-left"></i>
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
</div>