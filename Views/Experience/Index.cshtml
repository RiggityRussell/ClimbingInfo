@model IEnumerable<ClimbingInfo.Models.Experience>

@{
    ViewData["Title"] = "Experience";
}

<h1 class="bg-info rounded">Experience</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table bg-info rounded">
    <thead>
        <tr>
            <th>
                Years Climbing
            </th>
            <th>
                Frequency
            </th>
            <th>
                Members
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.years)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.freq)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Members.name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
