@model ClimbingInfo.Models.Members

@{
    ViewData["Title"] = "Member_Edit";
}

<div class="bg-info rounded text-white" style="font-family: 'Franklin Gothic Book'; text-shadow: 1px 1px black; padding: 10px; width:80%">
    <h1 class="text-center border-primary col-sm-12">Edit</h1>

    <h4>Member @Html.DisplayFor(model => model.name)</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />
                <div class="form-group">
                    <label asp-for="name" class="control-label">Name</label>
                    <input asp-for="name" class="form-control" />
                    <span asp-validation-for="name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="gender" class="control-label">Gender</label>
                    <input asp-for="gender" class="form-control" />
                    <span asp-validation-for="gender" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="address" class="control-label">Address</label>
                    <input asp-for="address" class="form-control" />
                    <span asp-validation-for="address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="city" class="control-label">City</label>
                    <input asp-for="city" class="form-control" />
                    <span asp-validation-for="city" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="state" class="control-label">State</label>
                    <input asp-for="state" class="form-control" />
                    <span asp-validation-for="state" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="zip" class="control-label">Zip Code</label>
                    <input asp-for="zip" class="form-control" />
                    <span asp-validation-for="zip" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="email" class="control-label">Email</label>
                    <input asp-for="email" class="form-control" />
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="cell" class="control-label">Cell</label>
                    <input asp-for="cell" class="form-control" />
                    <span asp-validation-for="cell" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ExperienceId" class="control-label">Experience Name</label>
                    <select asp-for="ExperienceId" class="form-control" asp-items="ViewBag.ExperienceId"></select>
                    <span asp-validation-for="ExperienceId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GearId" class="control-label">Setup Name</label>
                    <select asp-for="GearId" class="form-control" asp-items="ViewBag.GearId"></select>
                    <span asp-validation-for="GearId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-sm btn-outline-info bg-secondary text-white" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <i class="fa fa-solid fa-arrow-left"></i>
        <a asp-action="Index" style="padding-bottom:1px;">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>