@model ClimbingInfo.Models.Members

@{
    ViewData["Title"] = "Details";
}
@section head{ 
<style type="text/css">
    dt {
        text-align:right;
    }
</style>
}


<div class="bg-info rounded text-white row" style="font-family: 'Franklin Gothic Book'; text-shadow: 1px 1px black; padding: 10px;">
    <h1>Details</h1>

    <div>
        <h4>Members</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.name):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.name)
            </dd>
            <dt class="col-sm-2">
                Gender:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.gender)
            </dd>
            <dt class="col-sm-2">
                Address:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.address)
            </dd>
            <dt class="col-sm-2">
                City:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.city)
            </dd>
            <dt class="col-sm-2">
                State:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.state)
            </dd>
            <dt class="col-sm-2">
                Zip Code:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.zip)
            </dd>
            <dt class="col-sm-2">
                Email:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.email)
            </dd>
            <dt class="col-sm-2">
                Cell:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.cell)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Experience):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Experience.years) year(s)
            </dd>
            <dt class="col-sm-2">
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Experience.freq)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Gear):
            </dt>
            <dd class="col-sm-10">
                Harness: @Html.DisplayFor(model => model.Gear.Harness)
            </dd>
            <dt class="col-sm-2"></dt>
            <dd class="col-sm-10">
                Shoes: @Html.DisplayFor(model => model.Gear.Shoes)
            </dd>
            <dt class="col-sm-2"></dt>
            <dd class="col-sm-10">
                Chalk Bag: @Html.DisplayFor(model => model.Gear.Chalk_Bag)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
        <i class="fa fa-solid fa-arrow-left"></i>
        <a asp-action="Index">Back to List</a>
    </div>
</div>