@model ClimbingInfo.Models.Gear

@{
    ViewData["Title"] = "Delete_Gear";
}
@section head{
    <style type="text/css">
        dt {
            text-align: right;
        }
    </style>
}
<div class="bg-info rounded text-white" style="font-family: 'Franklin Gothic Book'; text-shadow: 1px 1px black; padding: 10px; width:80%">
    <h1 class="text-center border-primary col-sm-12">Delete Gear</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Gear</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Setup Name:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SetupName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Shoes):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Shoes)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Harness):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Harness)
            </dd>
            <dt class="col-sm-2">
                Chalk Bag:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Chalk_Bag)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="GearId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <i class="fa fa-solid fa-arrow-left"></i>
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
</div>